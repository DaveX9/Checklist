    <script>
        $(document).ready(function () {
            function updateDateTime() {
                const now = new Date();
                const formattedDate = now.toLocaleDateString("th-TH", { year: "numeric", month: "long", day: "numeric" });
                const formattedTime = now.toLocaleTimeString("th-TH", { hour: "2-digit", minute: "2-digit", second: "2-digit" });
                $("#current-date").text(`${formattedDate} ${formattedTime}`);
            }
            updateDateTime();
            setInterval(updateDateTime, 1000);

            $("#carSelection").change(function () {
                let selectedCar = $(this).val();
                if (!selectedCar) return;

                $.get(`/get-checklist-form/${selectedCar}`, function (response) {
                    let checklistHTML = "";
                    response.checklist.forEach((category, index) => {
                        let collapseID = `collapse${index}`;
                        checklistHTML += `
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#${collapseID}">
                                        ${category.category}
                                    </button>
                                </h2>
                                <div id="${collapseID}" class="accordion-collapse collapse" data-bs-parent="#inspectionAccordion">
                                    <div class="accordion-body">
                                        <div class="row fw-bold text-center">
                                            <div class="col-5">‡∏≠‡∏∏‡∏õ‡∏Å‡∏£‡∏ì‡πå</div> <!-- Increased width -->
                                            <div class="col-2">‡∏°‡∏µ/‡πÑ‡∏°‡πà‡∏°‡∏µ</div>
                                            <div class="col-2">‡∏à‡∏≥‡∏ô‡∏ß‡∏ô</div> <!-- Reduced width -->
                                            <div class="col-3">‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏</div>
                                        </div>
                                        <hr>
                                        ${category.details.map(item => `
                                            <div class="row mb-2">
                                                <div class="col-5">${item.name}</div> <!-- Increased width -->
                                                <div class="col-2 text-center">
                                                    <input type="checkbox" class="form-check-input checklist-item" data-id="${item.id}">
                                                </div>
                                                <div class="col-2">
                                                    <input type="number" class="form-control quantity" data-id="${item.id}" max="${item.expected || ''}">
                                                </div> <!-- Reduced width -->
                                                <div class="col-3">
                                                    <input type="text" class="form-control remark" data-id="${item.id}">
                                                </div>
                                            </div>
                                        `).join('')}

                                    </div>
                                </div>
                            </div>`;
                    });

                    $("#inspectionAccordion").html(checklistHTML);
                });
            });

            $("#submitChecklist").click(function () {
                let inspector = $("#inspector").val().trim();
                if (!inspector) {
                    alert("‚ö† ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÉ‡∏™‡πà‡∏ä‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡∏ï‡∏£‡∏ß‡∏à!");
                    return;
                }

                let carPlate = $("#carSelection").val();
                if (!carPlate) {
                    alert("‚ö† ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏õ‡πâ‡∏≤‡∏¢‡∏ó‡∏∞‡πÄ‡∏ö‡∏µ‡∏¢‡∏ô!");
                    return;
                }

                let equipment = [];
                $(".checklist-item").each(function () {
                    let id = $(this).data("id");
                    let quantity = parseInt($(`.quantity[data-id='${id}']`).val()) || 0;
                    let remark = $(`.remark[data-id='${id}']`).val() || "-";
                    let status = $(this).is(":checked") ? `‡∏°‡∏µ ${quantity}` : "‡πÑ‡∏°‡πà‡∏°‡∏µ";
                    equipment.push({ name: id, quantity, remark, status });
                });

                $.ajax({
                    url: "/submit-checklist",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({ inspector, plateNumber: carPlate, equipment }),
                    success: function () {
