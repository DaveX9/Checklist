    <script>
        $(document).ready(function() {
        console.log("✅ jQuery Loaded!");

        function updateDateTime() {
            const now = new Date();
            const formattedDate = now.toLocaleDateString("th-TH", {
                year: "numeric",
                month: "long",
                day: "numeric"
            });
            const formattedTime = now.toLocaleTimeString("th-TH", {
                hour: "2-digit",
                minute: "2-digit",
                second: "2-digit"
            });

            $("#current-date").text(`${formattedDate} ${formattedTime}`);
        }

        function fetchCarInfo() {
            $.ajax({
                url: "/get-car-info",
                type: "GET",
                success: function(response) {
                    $("#carInfo").text(`ป้ายทะเบียน: ${response.plateNumber}`);
                    $("#plateNumber").val(response.plateNumber);
                },
                error: function(err) {
                    console.error("❌ ไม่สามารถโหลดข้อมูลรถ:", err);
                    $("#carInfo").text("❌ โหลดข้อมูลรถไม่สำเร็จ");
                }
            });
        }

        updateDateTime();
        fetchCarInfo();
        setInterval(updateDateTime, 1000);

        $(".submit-btn").click(function(event) {
            event.preventDefault();
            console.log("✅ Button Clicked!");

            let formData = {
                inspector: $("#inspector").val(),
                dateTime: $("#current-date").text(),
                plateNumber: $("#plateNumber").val(),
                equipment: []
            };

            $(".row-cols-custom").each(function() {
                let equipmentName = $(this).find("span").text().trim();
                let isChecked = $(this).find("input[type='checkbox']").prop("checked");
                let remark = $(this).find("input[type='text']").val().trim();

                let statusText = isChecked ? "มี" : "ไม่มี";

                formData.equipment.push({
                    name: equipmentName,
                    status: statusText,
                    remark: remark !== "" ? remark : "-" // ถ้าไม่มีหมายเหตุให้ใส่ "-"
                });
            });

            console.log("📤 Sending Data:", formData);

            $.ajax({
                url: "/submit-checklist",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(formData),
                success: function(response) {
                    alert("✅ ข้อมูลถูกส่งไปที่ LINE Chat เรียบร้อยแล้ว!");
                    console.log("✅ Success:", response);
                },
                error: function(err) {
                    console.error("❌ Error sending data:", err);
                    alert("❌ ไม่สามารถส่งข้อมูลได้ กรุณาลองอีกครั้ง");
                }
            });
        });
    });

    </script>
    
